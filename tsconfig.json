{
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "./build",
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmitOnError": true,
        "lib": [
            "es2021",
            "dom",
            "DOM.Iterable"
        ],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "sourceMap": true,
        "inlineSources": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "incremental": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "paths": {
            "*": [
                "./src/*"
            ],
            "app/*": [
                "./src/*"
            ],
            "config/*": [
                "src/config/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "pages/*": [
                "./src/components/pages/*"
            ],
            "lib/*": [
                "./src/lib/*"
            ],
            "utils/*": [
                "./src/lib/utils/*"
            ],
            "services/*": [
                "./src/services/*"
            ],
            "helpers/*": [
                "./src/helpers/*"
            ],
            "types/*": [
                "./src/lib/types/*"
            ],
            "data/*": [
                "./src/lib/data/*"
            ],
            "static/*": [
                "./src/static/*"
            ],
            "public/*": [
                "./dist/*"
            ],
            "styles/*": [
                "./src/styles/*"
            ],
            "shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "./src/styles/*"
    ]
}